{{>header}}

    <section id="RegisterSection" >
		<div class="container">
			<h1 class="title">{{title}}</h1>

            <div class="row">
				<div class="col-lg-12">
					<p id="message"></p>
                    
                    <div id="forms">
                        <form id="registerForm" method="POST">

                             <div class="form-row">
                                <label for="email">Username</label>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Enter a Username">
                            </div>
                            
                            <div class="form-row">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" name="email" id="email" placeholder="Enter a Email Id">
                            </div>
                            
                            <div class="form-row">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Enter a password">
                            </div>
                        
                            <div class="form-row">
                                <input type="submit" id="button" class="form-control" value="Register">
                            </div>
                            <p>Existing user?</p>
                            <a href="/user/login">Signin</a>
                            
                        </form>
                    </div>
				</div>
			</div>
            
			
		</div>
	</section>

{{>footer}}