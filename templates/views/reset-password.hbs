{{>header}}

    <section id="RegisterSection" >
		<div class="container">
			<h1 class="title">{{title}}</h1>

            <div class="row">
				<div class="col-lg-12">
					<p id="message"></p>
                    
                    {{#ifEquals msg 'success'}}
                        
                        <div id="forms">
                           
                            <form id="resetPassword" method="post">

                                <div class="form-row">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" class="form-control" id="newPassword" name="newPassword"  placeholder="Enter a New Password">
                                </div>

                                <div class="form-row">
                                    <label for="confirmNewPassword">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword"  placeholder="Enter a Confirm New Password">
                                </div>

                                <div class="form-row">
                                    <input type="hidden" id="userid" name="userid" value="{{userid}}">
                                    <input type="submit" id="button" class="form-control" value="Reset Password">
                                </div>

                            </form>
                        </div>

                    {{else}}
                        <p id="inmessage">{{msg}}</p>
                    {{/ifEquals}}
                        
				</div>
			</div>
            
			
		</div>
	</section>

{{>footer}}