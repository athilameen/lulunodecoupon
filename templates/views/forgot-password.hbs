{{>header}}

    <section id="RegisterSection" >
		<div class="container">
			<h1 class="title">{{title}}</h1>

            <div class="row">
				<div class="col-lg-12">
					<p id="message"></p>
                    
                    <div id="forms">
                        
                        <form id="forgotPassForm" method="POST">

                            <div class="form-row">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" name="email" id="email" placeholder="Enter a Email Id">
                            </div>
                          
                            <div class="form-row">
                                <input type="submit" id="button" class="form-control" value="Retrieve Password">
                            </div>

                            <p>Don't have an Account</p>
                            <a href="/user/register">Signup</a>

                        </form>
                    </div>
				</div>
			</div>
            
			
		</div>
	</section>

{{>footer}}